// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



enum TransactionType {
  INCOME
  EXPENSE
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  password      String
  name          String?
  role          String        @default("ACCOUNTANT") // ADMIN, ACCOUNTANT
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  transactions  Transaction[]
}

model Category {
  id           Int             @id @default(autoincrement())
  name         String
  type         TransactionType
  transactions Transaction[]
  createdAt    DateTime        @default(now())
}

model Account {
  id               Int           @id @default(autoincrement())
  name             String        @unique
  initialBalance   Decimal       @default(0) @db.Decimal(15, 2)
  currentBalance   Decimal       @default(0) @db.Decimal(15, 2)
  
  // Giao dịch thu/chi
  transactions     Transaction[]
  
  // Chuyển khoản nội bộ
  transfersFrom    Transfer[]    @relation("SourceAccount")
  transfersTo      Transfer[]    @relation("DestinationAccount")
  
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model Transaction {
  id          Int             @id @default(autoincrement())
  amount      Decimal         @db.Decimal(15, 2)
  type        TransactionType
  date        DateTime        @default(now())
  description String?
  
  // Relations
  categoryId  Int
  category    Category        @relation(fields: [categoryId], references: [id])
  
  accountId   Int
  account     Account         @relation(fields: [accountId], references: [id])
  
  userId      String
  user        User            @relation(fields: [userId], references: [id])

  createdAt   DateTime        @default(now())
}

model Transfer {
  id            Int      @id @default(autoincrement())
  amount        Decimal  @db.Decimal(15, 2)
  date          DateTime @default(now())
  description   String?

  fromAccountId Int
  fromAccount   Account  @relation("SourceAccount", fields: [fromAccountId], references: [id])

  toAccountId   Int
  toAccount     Account  @relation("DestinationAccount", fields: [toAccountId], references: [id])

  createdAt     DateTime @default(now())
}